%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Opcoes especificas do beamer
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\mode<presentation> % Refere-se aos primeiros quatro modos (beamer,handout,second and trans). Isso e, todos os modos exceto o modo article
{
  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
  % MODELOS
  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
  % Pagina de Titulo
  \setbeamertemplate{title page}{%
	  \vspace{3mm}
	\begin{minipage}[c][5mm][c]{\textwidth}
	  \raggedleft
	  {\usebeamerfont{title}\usebeamercolor[fg]{title}\footnotesize\bf
	  Universidade Estadual de Maringá \\ Mestrado Acadêmico em Bioestatística}\vspace*{\baselineskip}
	\end{minipage}
    \begin{minipage}[c][30mm][c]{\textwidth}
      \raggedleft
      {\Huge\usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle}
      {\LARGE\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}
      \insertsubtitle}
     \end{minipage}
    \vfill
    \color{red}{
    \begin{minipage}[c][60mm][c]{\textwidth}%
      \centering\bf\scshape
      {\noindent\rule{.8\textwidth}{.5mm}}\vspace*{\baselineskip}

      {\usebeamerfont{author}\insertauthor}\vspace*{\baselineskip}

      {\usebeamerfont{institute}\insertinstitute}\vspace*{\baselineskip}

      {\usebeamerfont{date}\insertdate}\vspace*{\baselineskip}

      {\noindent\rule{.8\textwidth}{.5mm}}
    \end{minipage}}\vspace*{\baselineskip}
  }

  % Pagina Final
  \defbeamertemplate{final page}{text}[1]{%
	\begin{minipage}[c][30mm][c]{\textwidth}
	\end{minipage}
    \begin{minipage}[c][70mm][c]{\textwidth}
      \centering\bfseries\Huge
      \vfill
          #1
      \vfill
      {\inserttitlegraphic}\vspace*{\baselineskip}
    \end{minipage}
  }
  \newcommand{\finalpage}[1]{%
    \setbeamertemplate{final page}[text]{#1}
    \usebeamertemplate{final page}
  }

  % Adiciona a imagem de fundo ao background
  \newcommand{\pbebg}{%
    \setbeamertemplate{background}{
    \begin{tikzpicture}[overlay]
	    \node at (6.4,-4.75) {\includegraphics[width=1.01\paperwidth,height=\paperheight]{PBEgraphics/PBE_titlepage}};
    \end{tikzpicture}
    }
  }

  % Usa numeros em vez de uma figura para as referencias
  \setbeamertemplate{bibliography item}[text]
} % Fim das especificacoes de opcoes do beamer

\mode<all>
